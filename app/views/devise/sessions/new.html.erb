<div class="wrapper">
  <div class="img-container">
    <h2 class="fw-bold fs-4">MindWell Hub</h2>
    <div class="img auth-img">
      <%= image_tag('wellbeing.webp', alt: 'login', class: 'img-fluid login-img') %>
    </div>
  </div>
  <div class="container auth-container">
    <h2 class="auth-head mb-4">Log in</h2>
    <p class="fw-bold mb-4">Welcome back to MindWell Community</p>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                required: false,
                autofocus: true,
                label: false,
                input_html: { autocomplete: "email", placeholder: "Email", class: "form-input" } %>
        <%= f.input :password,
                required: false,
                label: false,
                input_html: { autocomplete: "current-password", placeholder: "Password", class: "form-input" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "login-button" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
